<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toTopOf="@+id/result_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result_text"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/left_bracket"
                style="@style/OperatorButton"
                android:onClick="OnAllClearClick"
                android:text="(" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/right_bracket"
                style="@style/OperatorButton"
                android:onClick="OnOperatorClick"
                android:text=")"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button"
                style="@style/OperatorButton"
                android:onClick="OnBackClick"
                app:icon="@drawable/baseline_backspace_24"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/div_button"
                style="@style/OperatorButton"
                android:onClick="OnOperatorClick"
                android:text="รท" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="9" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mult_button"
                style="@style/OperatorButton"
                android:onClick="OnOperatorClick"
                android:text="ร" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minus_button"
                style="@style/OperatorButton"
                android:onClick="OnOperatorClick"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus_button"
                style="@style/OperatorButton"
                android:onClick="OnOperatorClick"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clr_button"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="C" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/ClassicButton"
                android:onClick="OnDigitClick"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/point_button"
                style="@style/ClassicButton"
                android:onClick="OnOperatorClick"
                android:text="." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equal_button"
                style="@style/EqualButton"
                android:onClick="OnEqualClick"
                android:text="=" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>